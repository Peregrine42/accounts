<h1>A list of the accounts</h1>
<table>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  <% @accounts.each do |account| %>
    <tr>
      <td><%= account.name %></td>
      <td><%= link_to 'Show', account_path(account) %></td>
      <td><%= link_to 'Edit', edit_account_path(account) %></td>
      <td><%= link_to 'Destroy', account_path(account), method: :delete, data: { confirm: 'Are you sure? This will remove all transactions associated with this account.' } %></td>
    </tr>
  <% end %>
</table>
